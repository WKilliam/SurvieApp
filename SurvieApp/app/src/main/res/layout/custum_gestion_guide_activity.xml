<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stylercvgestion"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagedelaregionchoisie"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/regiondesert"
        app:civ_border_color="#1B4A5B"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2detailregionchoisie"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textdelaregionchoisie"
        app:layout_constraintStart_toStartOf="@+id/textdelaregionchoisie"
        app:layout_constraintTop_toBottomOf="@+id/textdelaregionchoisie" />

    <TextView
        android:id="@+id/textdelaregionchoisie"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/imagedelaregionchoisie"
        app:layout_constraintStart_toStartOf="@+id/imagedelaregionchoisie"
        app:layout_constraintTop_toBottomOf="@+id/imagedelaregionchoisie" />


</androidx.constraintlayout.widget.ConstraintLayout>
