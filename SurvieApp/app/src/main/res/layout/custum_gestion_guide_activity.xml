<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stylercvgestion"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="#245362">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contstyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="#62B2CC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text2detailregionchoisie"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#1B4A5B"
            android:textSize="20dp"
            android:typeface="serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textdelaregionchoisie" />

        <TextView
            android:id="@+id/textdelaregionchoisie"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#1B4A5B"
            android:textSize="25dp"
            android:typeface="serif"
            app:layout_constraintTop_toBottomOf="@+id/imagedelaregionchoisie"
            tools:layout_editor_absoluteX="63dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagedelaregionchoisie"
            android:layout_width="fill_parent"
            android:layout_height="137dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/regiondesert"
            app:civ_border_color="#1B4A5B"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
