<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#437871"
    tools:context=".activityfallow.AProposActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/aproposimage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/homme"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texteapropos"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/aproposimage"
        app:layout_constraintStart_toStartOf="@+id/aproposimage"
        app:layout_constraintTop_toBottomOf="@+id/aproposimage" />

</androidx.constraintlayout.widget.ConstraintLayout>